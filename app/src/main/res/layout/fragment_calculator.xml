<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CalculatorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/ll_first_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_clear"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="C"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="%"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_clear_last_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="C"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_divide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="/"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_second_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_7"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="7"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="8"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="9"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_multiply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="*"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_third_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_4"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="4"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="5"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="6"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_difference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="-"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_forth_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_1"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="1"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="2"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="3"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="+"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fifth_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_00"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="00"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="0"
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="."
                    android:textSize="40sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_to_solve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="="
                    android:textSize="40sp" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_math_expression"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="12dp"
            tools:text="43+346"
            android:textColor="@color/teal_200"
            android:textSize="75sp"
            android:gravity="end|bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>